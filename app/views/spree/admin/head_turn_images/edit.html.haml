= render :partial => 'spree/admin/shared/product_sub_menu'
= render :partial => 'spree/admin/shared/product_tabs', :locals => { :current => 'Head Turn Images' }
= render :partial => 'spree/shared/error_messages', :locals => { :target => @image }
- content_for :page_actions do
  %li= button_link_to t(:back_to_images_list), admin_product_head_turn_images_url(@product), :icon => 'icon-arrow-left'
= form_for [:admin, @product, @head_turn_image], :html => { :multipart => true } do |f|
  %fieldset{"data-hook" => "edit_image"}
    %legend{:align => "center"}= @head_turn_image.attachment_file_name
    .field.alpha.three.columns.align-center{"data-hook" => "thumbnail"}
      = f.label t(:thumbnail)
      %br/
      = link_to image_tag(@head_turn_image.attachment.url(:mini)), @head_turn_image.attachment.url(:product)
    .nine.columns.omega
      = render :partial => 'form', :locals => { :f => f }
    .clear
    %legend{:align => "center"}Preview
    .headturn-image-wrap{:style => "overflow: hidden;"}
      =image_tag @head_turn_image.attachment.url(:full_size), :class=>'headturn-image', :alt => "head-turn-image" , :style => "left: -814px !important;"
    .clear
    .form-buttons.filter-actions.actions{"data-hook" => "buttons"}
      = button t(:update), 'icon-refresh'
      %span.or= t(:or)
      = link_to t(:cancel), admin_product_head_turn_images_url(@product), :id => 'cancel_link', :class => 'button icon-remove'

