- if products.any?
  %ul#products.inline.product-listing{"data-hook" => ""}
    - products.each do |product|
      - if product.on_display?
        %li{:class => "columns eight #{cycle("alpha", "secondary", "", "omega secondary", :name => "classes")}", "data-hook" => "products_list_item", :id => "product_#{product.id}", :itemscope => "", :itemtype => "http://schema.org/Product"}
          .product-image
            = link_to small_image(product, :itemprop => "image"), product, :itemprop => 'url'
          = link_to product, :class => 'info', :itemprop => "name" do
            .home-glasses-number
              .no NO.
              .glasses-no
                #{truncate(product.name, :length => 50)}
            .shop-now
              Shop now
              %span.icon-play
    - reset_cycle("classes")
